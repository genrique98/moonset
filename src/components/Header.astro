---
import HeaderLink from "./HeaderLink.astro";

const links = [
    { href: "/", text: "Solutions" },
    { href: "/expertise", text: "Expertise"},
    { href: "/clients", text: "Clients" },
    { href: "/about", text: "Contact" },
    { href: "/blog", text: "Insights" }
];

---

<header class="w-full h-28 border-2 border-blue-400 flex justify-center">
    <nav class="flex lg:flex-row md:flex-row sm:flex-row flex-col items-start justify-between w-full relative mx-auto">
    
        <div class="flex flex-col justify-center w-1/2 h-full border-2 border-blue-400">
            <a class="flex flex-row" href="/">
                <img width={100} height={100} src="/thesphere.png" alt="" class="h-[100px] w-[100px]"/>
                <div class="flex flex-col items-left justify-center ml-2">
                    <h1 class="font-sans font-bold lg:text-6xl md:text-6xl sm:text-4xl text-4xl text-[#4343FE]">Moonset</h1>
                </div>
            </a>
        </div>
        <nav class="flex flex-col items-center text-center justify-center mx-auto text-black-500 w-1/2 border-2 border-blue-400 h-full">
            <div class="flex flex-row h-14 w-full justify-center items-center">
                <div class="flex flex-row justify-center items-center h-14 rounded-xl border-2 border-[#4343FE] w-full p-1">

                    {links.map((link) => (
                        <div class="px-1 mx-2 font-bold text-[#4343FE] lg:text-sm md:text-sm sm:text-xs text-xs">
                            <HeaderLink class="hover:bg-[#4343FE] h-full" href={link.href}>{link.text}</HeaderLink>
                        </div>
                    ))}
                </div>

                <div class="border-2 border-blue-400 h-full flex items-center justify-end">
                    <span class="w-[50px] h-[50px] rounded-full bg-gradient-to-r from-[#171738] to-[#4343FE]"></span>
                </div>
            </div>
        </nav>

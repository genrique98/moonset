---
import HeaderLink from "./HeaderLink.astro";

const links = [
	{ href: "/", text: "Solutions" },
	{ href: "/expertise", text: "Expertise" },
	{ href: "/clients", text: "Clients" },
	{ href: "/about", text: "Contact" },
	{ href: "/blog", text: "Insights" },
];
---

<header class="flex h-28 w-full justify-center border-2 border-blue-400">
	<nav
		class="relative mx-auto flex w-full flex-col items-start justify-between sm:flex-row md:flex-row lg:flex-row"
	>
		<div
			class="flex h-full w-1/2 flex-col justify-center border-2 border-blue-400"
		>
			<a class="flex flex-row" href="/">
				<img
					width={100}
					height={100}
					src="/thesphere.png"
					alt=""
					class="h-[100px] w-[100px]"
				/>
				<div class="items-left ml-2 flex flex-col justify-center">
					<h1
						class="font-sans text-4xl font-bold text-[#171738] sm:text-4xl md:text-6xl lg:text-6xl"
					>
						Moonset
					</h1>
				</div>
			</a>
		</div>
		<nav
			class="text-black-500 mx-auto flex h-full w-1/2 flex-col items-center justify-center border-2 border-blue-400 text-center"
		>
			<div class="flex h-14 w-full flex-row items-center justify-center">
				<div
					class="flex h-14 w-full flex-row items-center justify-center rounded-xl border-2 border-[#4343FE] p-1"
				>
					{
						links.map((link) => (
							<div class="mx-2 px-1 text-xs font-bold text-[#171738] sm:text-xs md:text-sm lg:text-sm">
								<HeaderLink class="h-full hover:bg-[#4343FE]" href={link.href}>
									{link.text}
								</HeaderLink>
							</div>
						))
					}
				</div>

				<div
					class="flex h-full items-center justify-end border-2 border-blue-400"
				>
					<span
						class="h-[50px] w-[50px] rounded-full bg-gradient-to-r from-[#171738] to-[#4343FE]"
					></span>
				</div>
			</div>
		</nav>
